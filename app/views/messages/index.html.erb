
    <% @messages.each do |message| %>
    <% if message.body %>
      <% account = Account.find(message.account_id) %>
      <strong><%= account.username %></strong>
     <p><%= message.body %></p>
    <% end %>
    <% end %>
    <%= form_for [@conversation, @message] do |f| %>
    <%= f.text_area :body %>
    <%= f.text_field :account_id, value: current_account.id, type: "hidden" %>
    <%= f.submit "Send Reply" %>
    <% end %>
