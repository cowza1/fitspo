<div class = exercise-background >
<h1 class="workout-day-title"><%= @workout.name %></h1>
<p class = "date-title" >Date: <%=@workout.date%></p>

<div class="card-exercise" style="width: 30rem; height: 30rem;">
  <div class="card-body">

    <% @exercises.each do |exercise| %>
      <div class="d-flex justify-content-between">
        <span class="text-decoration-line-through"></span>

            <p class="lead-exercise"><em>Exercise</em>    <%=exercise.name%></p>
              <p class="lead-exercise"><em>Sets:</em>    <%=exercise.set%></p>
              <p class="lead-exercise"><em>Reps:</em>    <%=exercise.rep%></p>
              <p class="lead-exercise"><em>Weight:</em>    <%=exercise.weight%></p>

         <%= link_to "Delete exercise", exercise_path(exercise), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } %>
      </div>
    <% end %>

</div>
</div>
</div>

<%=link_to "Back", workouts_path%>
