

<div class = "exercise-page" style="background-image: url('https://source.unsplash.com//-yqiYu9xRBU')">
  <div class="back-link">
  <%=link_to workouts_path do%>
  <i class="fa-solid fa-angles-left"></i>
  <% end %>
  </div>
  <h1 class="workout-day-title"><%= @workout.name %></h1>
  <p class = "workout-date" >Date: <%=@workout.date%></p>


    <div class="exercise-container">
      <div class="exercise-body">

        <% @exercises.each do |exercise| %>
          <div class="exercise-card">
              <%if exercise.set == nil && exercise.rep == nil && exercise.weight == nil%>
                <p class="exercise-name">Exercise<br>    <%=exercise.name%></p>
                <div class="cardio">
                <p class="exercise-distance">Distance<br>   <%=exercise.distance%> km</p>
                </div>
              <% else %>
                  <p class="exercise-name">Exercise<br>    <%=exercise.name%></p>
                  <div class="weight">
                  <p class="exercise-set">Sets<br>    <%=exercise.set%></p>
                  <p class="exercise-rep">Reps<br>    <%=exercise.rep%></p>
                  <p class="exercise-weight">Weight<br>   <%=exercise.weight%></p>
                  </div>
              <% end %>
            <%= link_to exercise_path(exercise), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } do%>
              <i class="fa-solid fa-trash-can"></i>
              <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>
