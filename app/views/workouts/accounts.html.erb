<div class="workout-page" style="background-image: url('https://source.unsplash.com//sHfo3WOgGTU')">
 <div class="workout-account-container">
    <div class="workout-page-header">
      <h4><%= @account.username%>'s workouts</h4>
    </div>

  <% if @account.workouts.empty? %>
      <p style="text-align: center; color:white; font-weight:bolder;">No workouts logged</p>
    <% else %>
        <div class="workout-container row d-flex">
            <% @account.workouts.each do |workout| %>
                <div class="card-workout col-4">
                  <%= link_to  workout_path(workout) do %>
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <p class="card-title"><%= workout.name %></p>
                    </div>
                      <p class="card-title-date"><%=workout.date%></p>
                      <% end %>
                  </div>
                </div>
                <% end %>
      </div>
  <% end %>
 </div>
</div>
