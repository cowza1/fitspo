<div class="workout-page" style="background-image: url('https://source.unsplash.com//sHfo3WOgGTU')">
<div>
<p><%= @account.username%>'s workouts</p>
</div>

  <div class="workout-container row d-flex">
        <% @account.workouts.each do |workout| %>
            <div class="card-workout col-4">
              <%= link_to  workout_path(workout) do %>
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <p class="card-title"><%= workout.name %></p>
                </div>
                  <p class="card-title-date"><%=workout.date%></p>
                  <% end %>
              </div>
            </div>
            <% end %>
  </div>
</div>
